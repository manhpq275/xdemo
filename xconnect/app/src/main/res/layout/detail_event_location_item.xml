<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_border_image_view"
    android:paddingTop="@dimen/size_10dp"
    android:paddingBottom="@dimen/size_10dp">


    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="@dimen/tvEventPromotionSize"
        android:layout_height="@dimen/tvEventPromotionSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="18dp"
        android:src="@drawable/ic_house" />

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imLogo"
        android:paddingRight="@dimen/size_30dp"
        android:text="Cửa hàng biển đông tại Royal City"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocationName"
        android:layout_toEndOf="@+id/imLogo"
        android:layout_toRightOf="@+id/imLogo"
        android:text="Số 1 Nguyễn Trãi, Thanh Xuân, Hà Nội"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/size_10dp" />

    <RelativeLayout
        android:id="@+id/rlGroupPhone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvLocation"
        android:layout_toEndOf="@+id/imLogo"
        android:layout_toRightOf="@+id/imLogo"
        android:background="@drawable/phone_button_bg">

        <ImageView
            android:id="@+id/icPhone"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_phone">

        </ImageView>

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/icPhone"
            android:paddingRight="@dimen/size_4dp"
            android:paddingTop="@dimen/size_4dp"

            android:text="0987654321"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_phone_bg"
            android:textSize="@dimen/size_10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlGroupMap"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvLocation"
        android:layout_toRightOf="@+id/rlGroupPhone"
        android:background="@drawable/custom_background_vendor">

        <ImageView
            android:id="@+id/icLocation"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_location_detail">

        </ImageView>

        <TextView
            android:id="@+id/tvMaps"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/icLocation"
            android:paddingRight="@dimen/size_4dp"
            android:paddingTop="@dimen/size_4dp"
            android:text="@string/txt_map"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size_10dp" />
    </RelativeLayout>
</RelativeLayout>