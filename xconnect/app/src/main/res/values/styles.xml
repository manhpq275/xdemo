<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_7dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">left</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="EventDetailTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_10dp</item>
        <item name="android:textColor">@color/nonSelectTab</item>
        <item name="android:gravity">left</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="custom_dialog_theme">
           <item name="android:windowBackground">@color/dialog_background_color</item>
    </style>


    <dimen name="size_7dp">7dp</dimen>
    <color name="dialog_background_color">#00000000</color>
</resources>
